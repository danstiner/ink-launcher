<resources>

    <style name="Theme.InkLauncher" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.InkLauncher.Fullscreen" parent="Theme.InkLauncher">
        <item name="android:actionBarStyle">@style/Widget.Theme.InkLauncher.ActionBar.Fullscreen</item>
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>